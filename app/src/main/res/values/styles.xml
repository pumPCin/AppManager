<resources>

    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">?attr/colorSurface</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash_logo</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>

    <style name="AppTheme.Splash.Black" parent="AppTheme.Splash">
        <item name="postSplashScreenTheme">@style/AppTheme.Black</item>
    </style>

    <style name="AppTheme.AppWidgetContainerParent" parent="AppTheme">
        <item name="appWidgetRadius">24dp</item>
        <item name="appWidgetPadding">16dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>

    <style name="AppTheme.AppWidgetContainer" parent="AppTheme.AppWidgetContainerParent" />

    <style name="AppTheme.AppWidgetContainer.IconOnly" parent="AppTheme.AppWidgetContainerParent">
        <item name="appWidgetPadding">8dp</item>
        <item name="appWidgetRadius">8dp</item>
    </style>

    <style name="Widget.AppTheme.AppWidgetOverlay" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:padding">?attr/appWidgetPadding</item>
    </style>

    <style name="Widget.AppTheme.AppWidget" parent="Widget.AppTheme.AppWidgetOverlay" />

    <style name="Widget.AppTheme.BarChartView" parent="android:Widget">
        <!-- Bar appearance -->
        <item name="barColor">?attr/colorPrimaryContainer</item>
        <item name="selectedBarColor">?attr/colorPrimary</item>
        <item name="minBarWidth">8dp</item>
        <item name="maxBarWidth">24dp</item>
        <item name="valueOnTopOfBar">false</item>

        <!-- Grid appearance -->
        <item name="gridColor">?attr/colorOutline</item>
        <item name="gridStrokeWidth">1dp</item>
        <item name="gridLineCount">6</item>
        <item name="gridLabelsOnLeft">true</item>

        <!-- Label appearance -->
        <item name="textColor">?attr/colorOutline</item>
        <item name="textSize">@dimen/font_size_medium</item>
        <item name="yAxisFormat">@null</item>
        <item name="emptyText">@string/no_usage_in_this_time_range</item>

        <!-- Touch line appearance -->
        <item name="touchLineColor">?attr/colorOutline</item>
        <item name="touchLineWidth">2dp</item>

        <!-- Tooltip appearance -->
        <item name="tooltipBackgroundColor">?attr/colorSurfaceInverse</item>
        <item name="tooltipTextColor">?attr/colorOnSurfaceInverse</item>
        <item name="tooltipCornerRadius">6dp</item>
    </style>
</resources>
