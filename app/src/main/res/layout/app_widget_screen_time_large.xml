<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.AppTheme.AppWidget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_widget_background"
    android:padding="0dp"
    android:theme="@style/AppTheme.AppWidgetContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/app_widget_background_padding">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/screen_time" />

        <TextView
            android:id="@+id/screen_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingVertical="@dimen/padding_small"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="36sp"
            android:textStyle="bold"
            tools:text="2h 30m" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#d4e3ff" />

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#565e71" />

                <TextView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/circle_background"
                    android:backgroundTint="#1b1b1b" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/app3_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_medium"
                    tools:text="K-9 Mail" />

                <TextView
                    android:id="@+id/app2_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_medium"
                    tools:text="App Manager" />

                <TextView
                    android:id="@+id/app1_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_medium"
                    tools:text="Signal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Badges -->

    <TextView
        android:id="@+id/app1_time"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/circle_background"
        android:backgroundTint="#1b1b1b"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#f9f9f9"
        android:textSize="@dimen/font_size_medium"
        tools:text="~1h" />

    <TextView
        android:id="@+id/app2_time"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="#565e71"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#f9f9f9"
        android:textSize="@dimen/font_size_medium"
        tools:text="45m" />

    <TextView
        android:id="@+id/app3_time"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="145dp"
        android:background="@drawable/circle_background"
        android:backgroundTint="#d4e3ff"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="#1b1b1b"
        android:textSize="@dimen/font_size_medium"
        tools:text="20m" />

</RelativeLayout>